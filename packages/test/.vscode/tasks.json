{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Rebuild",
            "type": "npm",
            "script": "rebuild",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Lint",
            "type": "npm",
            "script": "lint-ide",
            "problemMatcher": "$eslint-stylish",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Bump Version",
            "type": "npm",
            "script": "bump-version",
            "problemMatcher": []
        }
    ]
}
